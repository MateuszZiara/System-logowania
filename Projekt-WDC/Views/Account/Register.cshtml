@model Projekt_WDC.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Rejestracja";
}

<div class="auth-wrapper">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Utwórz konto</h2>
            <p class="text-muted small">Zacznij korzystać z darmowego konta</p>
        </div>
        <div class="card-body">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3 small"></div>
                
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder="nazwa@przyklad.com" />
                    <label asp-for="Email">Adres email</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                
                <div class="form-floating">
                    <input asp-for="Password" id="passwordInput" class="form-control" placeholder="Hasło" />
                    <label asp-for="Password">Hasło</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <div class="progress" style="height: 5px;">
                        <div id="password-strength-bar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="4"></div>
                    </div>
                    <small id="password-strength-text" class="text-muted" style="font-size: 0.8rem;">Siła hasła</small>
                </div>
                
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Potwierdź hasło" />
                    <label asp-for="ConfirmPassword">Potwierdź hasło</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary">Utwórz konto</button>
                </div>

                <div class="auth-footer">
                    Masz już konto? <a asp-action="Login">Zaloguj się</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.4.2/zxcvbn.js"></script>
    <script>
        document.getElementById('passwordInput').addEventListener('input', function() {
            var val = this.value;
            var result = zxcvbn(val);
            var score = result.score; // 0-4
            
            var bar = document.getElementById('password-strength-bar');
            var text = document.getElementById('password-strength-text');
            
            var width = (score + 1) * 20;
            var colorClass = '';
            var strengthText = '';
            
            switch(score) {
                case 0:
                case 1:
                    colorClass = 'bg-danger';
                    strengthText = 'Słabe (Zbyt łatwe do odgadnięcia)';
                    break;
                case 2:
                    colorClass = 'bg-warning';
                    strengthText = 'Średnie';
                    break;
                case 3:
                    colorClass = 'bg-info';
                    strengthText = 'Dobre';
                    break;
                case 4:
                    colorClass = 'bg-success';
                    strengthText = 'Silne';
                    break;
            }
            
            if (val.length === 0) {
                width = 0;
                strengthText = 'Siła hasła';
                colorClass = '';
            }
            
            bar.style.width = width + '%';
            bar.className = 'progress-bar ' + colorClass;
            text.innerText = strengthText;
        });
    </script>
}
