@model Projekt_WDC.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="auth-wrapper">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Witaj ponownie</h2>
            <p class="text-muted small">Wprowadź swoje dane, aby uzyskać dostęp do konta</p>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder="nazwa@przyklad.com" />
                    <label asp-for="Email">Adres email</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Password" class="form-control" placeholder="Hasło" />
                    <label asp-for="Password">Hasło</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label small text-muted">Zapamiętaj mnie</label>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Zaloguj się</button>
                </div>

                <div class="auth-footer">
                    Nie masz konta? <a asp-action="Register">Zarejestruj się za darmo</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
